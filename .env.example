# Rename to .env and fill values
OPENAI_API_KEY=

# MongoDB Atlas
MONGODB_URI=<mongodb_url>?retryWrites=true&w=majority&appName=rag-cluster
MONGODB_DBNAME=gpt_integration
MONGODB_COLLECTION=documents

# Audio / STT config
ENABLE_STT=false
WHISPER_MODEL=small

# Server
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
CORS_ORIGINS=https://your-frontend.vercel.app,http://localhost:3000

# FAISS local index path (optional)
FAISS_PATH=./knowledge_pack/index_hnsw.faiss
EMBED_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
TESSERACT_CMD=/usr/bin/tesseract

# Rate Limiting
RATE_LIMIT_QUESTIONS=10/minute
RATE_LIMIT_INGEST=6/hour

API_KEY=